# AI服务配置示例文件
# 复制此文件为 .env 并填入真实的API密钥

# ========== 百度AI服务 ==========
# 百度文心一言（用于文本转PPT增强）
BAIDU_WENXIN_API_KEY=your_baidu_wenxin_api_key
BAIDU_WENXIN_SECRET_KEY=your_baidu_wenxin_secret_key

# 百度语音合成（用于TTS）
BAIDU_TTS_API_KEY=your_baidu_tts_api_key
BAIDU_TTS_SECRET_KEY=your_baidu_tts_secret_key

# ========== 腾讯云服务 ==========
# 腾讯云数字人
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
TENCENT_REGION=ap-beijing
TENCENT_AVATAR_ID=your_avatar_id

# ========== OpenAI服务（可选）==========
# OpenAI GPT（用于文本转PPT增强）
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# ========== Azure服务（可选）==========
# Azure语音合成（用于TTS）
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region

# ========== 功能开关 ==========
# 是否启用AI增强（true/false）
ENABLE_AI_ENHANCEMENT=true
# AI服务提供商选择（baidu/openai/tencent/azure）
AI_PROVIDER=baidu








